<Window x:Class="WpfApp1.AddedDep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Добавление подразделения" Height="169" Width="369" ResizeMode="NoResize">
    <Grid>
        <GroupBox x:Name="gbDep" Grid.Row="1" Header="Добавление подразделения">
            <WrapPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock>Название подразделения:</TextBlock>
                    <TextBox x:Name="tbxNameDepartment" Width="150"></TextBox>
                </StackPanel>
                <Button Width="100" Margin="5" HorizontalAlignment="Left" x:Name="btnSaveDep" Click="btnSaveDep_Click" Content="Сохранить"/>
            </WrapPanel>
        </GroupBox>
    </Grid>
</Window>
